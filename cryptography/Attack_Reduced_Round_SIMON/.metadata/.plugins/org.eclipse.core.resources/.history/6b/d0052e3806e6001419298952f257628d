				ct = t.encrypt(sub2, ct);
				break;
			case 2:
				ct = t.encrypt(sub3, ct);
				break;
			}
		}
		System.out.println(Hex.toString(ct));
		
/*		pt = Hex.toByteArray("1107AB88C1BB");
