import java.net.InetAddress;
import java.util.Arrays;


public class Player {
	private String name;
	private int port;
	private InetAddress IPAddress;
	private int playerNumber;
	private boolean[] tiles = new boolean[9];

	public Player(String name, int port, InetAddress iPAddress) {
		this.name = name;
		this.port = port;
		this.IPAddress = iPAddress;
		Arrays.fill(tiles, true);
	}

	public String getName() {
		return name;
	}

	public int getPort() {
		return port;
	}

	public InetAddress getIPAddress() {
		return IPAddress;
	}
	
	public int getPlayerNumber() {
		return playerNumber;
	}

	public void setPlayerNumber(int playerNumber) {
		this.playerNumber = playerNumber;
	}

	public int getScore() {
		int score = 0;
		for (int i = 0; i < tiles.length; i++) {
			if(tiles[i])
				score += (i+1);
		}
		return score;
	}

	public void setScore(int score) {
		this.score = score;
	}
	
	public boolean flipTile(int i, String position)
	{
		boolean result = position.equalsIgnoreCase("up");
		tiles[i-1] = result;
		return result;
	}
	
	
}
