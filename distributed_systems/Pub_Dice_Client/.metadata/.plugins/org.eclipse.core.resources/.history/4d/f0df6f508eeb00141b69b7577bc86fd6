import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;
import java.util.concurrent.TimeUnit;
import java.util.concurrent.locks.Condition;
import java.util.concurrent.locks.Lock;


public class ReceiverThread extends Thread implements Subject{

	private BufferedReader in;
	private List<String> response = null;
	private List<Observer> observers = new ArrayList<Observer>();
	private Lock lock;
	private Condition noRequest;
	private Condition canRead;
	
	public ReceiverThread(InputStream in, Lock lock, Condition noRequest, Condition canRead) {
		this.in = new BufferedReader(new InputStreamReader(in));
		this.lock = lock;
		this.noRequest = noRequest;
		this.canRead = canRead;
	}
	
	public BufferedReader getIn() {
		return in;
	}
	
	@Override
	public void run() {
		while(true)
		{
			lock.lock();
			try {
				while(!in.ready())
					canRead.await(10, TimeUnit.MILLISECONDS);
				response = new ArrayList<String>();
				String aux;
				while((aux = in.readLine()) != null)
					response.add(aux);
				System.out.println(response.size());
				notifyObservers();
				noRequest.signalAll();
			} catch (IOException e) {
				System.out.println("IO ERROR: Error trying to access input stream");
				System.exit(0);
				e.printStackTrace();
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
			finally
			{
				lock.unlock();
			}
		}
	}

	@Override
	public void subscribe(Observer o) {
		this.observers.add(o);
	}

	@Override
	public void notifyObservers() {
		for (Observer o : observers) {
			o.update(response);
		}
	}
}
