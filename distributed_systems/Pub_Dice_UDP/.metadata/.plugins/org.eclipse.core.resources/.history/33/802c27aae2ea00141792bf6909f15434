import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStream;
import java.io.InputStreamReader;
import java.util.ArrayList;
import java.util.List;


public class ReceiverThread extends Thread implements Subject{

	private BufferedReader in;
	
	public ReceiverThread(InputStream in) {
		this.in = new BufferedReader(new InputStreamReader(in));
	}
	
	@Override
	public void run() {
		List<String> response = null;
		while(true)
		{
			try {
				if(in.ready())
				{
					response = new ArrayList<String>();
					String aux;
					while((aux = in.readLine()) != null)
					{
						response.add(aux);
					}
					notifyObservers(response);
				}
			} catch (IOException e) {
				System.out.println("IO ERROR: Error trying to access input stream");
				System.exit(0);
				e.printStackTrace();
			}
		}
	}
	
	private void notifyObservers(List<String> response)
	{
		
	}

	@Override
	public void subscribe(Observer o) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void notifyObservers() {
		// TODO Auto-generated method stub
		
	}
}
